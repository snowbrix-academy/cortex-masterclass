# --- Snowflake ---
SNOWFLAKE_ACCOUNT=your_account.region.cloud
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_ROLE=SYSADMIN
SNOWFLAKE_WAREHOUSE=LOADING_WH
SNOWFLAKE_DATABASE=ECOMMERCE_RAW
SNOWFLAKE_SCHEMA=PUBLIC

# --- Source PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ecommerce_source
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# --- Stripe API ---
STRIPE_API_KEY=sk_test_your_stripe_test_key_here
STRIPE_API_BASE_URL=https://api.stripe.com/v1

# --- Slack Notifications ---
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# --- Airflow ---
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres-airflow:5432/airflow

# --- Dashboard ---
STREAMLIT_SNOWFLAKE_WAREHOUSE=REPORTING_WH
STREAMLIT_SNOWFLAKE_DATABASE=ECOMMERCE_ANALYTICS
STREAMLIT_SNOWFLAKE_SCHEMA=MARTS
